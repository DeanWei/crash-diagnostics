# FROM specifies sources to collect from
# Currently only supports local
FROM local

# WORKDIR specifies a location on disk
# where the tool collects information
WORKDIR /tmp/flareout

# Path to local kubeconfig file
# If not provided, the tool will attempt to get
# the config file from env $KUBECONFIG or 
# $HOME/.kube/config
KUBECONFIG {{.Home}}/.kube/kind-config-kind

# Sample commands
COPY /var/log/system.log
CAPTURE df -h
CAPTURE df -i
CAPTURE netstat -an
CAPTURE ps -ef
CAPTURE lsof -i 

